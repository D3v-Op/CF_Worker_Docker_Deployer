


###########################################################################################################################################################################################################################################################################################################################################################################################



FROM alpine:latest



# set environment variables



WORKDIR /home/app/



ENV \
  DEBIAN_FRONTEND='noninteractive' \
  HOME=/home/app/ \
  LANG='en_US.UTF-8' \
  LANGUAGE='en_US.UTF-8' \
  TERM='xterm' \
  TZ='Asia/Kolkata'
###



RUN \
  apk -qq update ; \
  apk -qq upgrade
###



COPY deploy_.sh .

# commen it out when useing curl fetch

COPY /site/ /home/app/


RUN \
  chmod +x ./deploy_.sh && \
  ./deploy_.sh
###



CMD ./deploy_.sh



###########################################################################################################################################################################################################################################################################################################################################################################################
