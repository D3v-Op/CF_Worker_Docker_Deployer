


###########################################################################################################################################################################################################################################################################################################################################################################################



FROM alpine:latest



# set environment variables



WORKDIR /home/app/



ENV \
  DEBIAN_FRONTEND='noninteractive' \
  HOME = /home/app/ \
  LANG = 'en_US.UTF-8' \
  LANGUAGE = "en_US.UTF-8" \
  TERM = "xterm" \
  TZ = 'Asia/Kolkata'
###

WORKDIR /home/app/

RUN \
  apk -qq update ; \
  apk -qq upgrade
###



COPY deploy_.sh .
COPY /site/ /home/app/


RUN \
  chmod +x ./*.sh && \
  ./*.sh
###



CMD ./deploy_.sh



###########################################################################################################################################################################################################################################################################################################################################################################################
